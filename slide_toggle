            $(document).ready(function(){
                $("#flip").click(function(){
                    $("#panel").slideToggle("slow");
                });
            });
        </script>
        <style>
            #panel, #flip{
                padding: 5px;
                text-align: center;
                background-color: #e5eecc;
                border: 1px solid #c3c3c3;
            }
            #flip{
                cursor: pointer;
            }
            #panel{
                padding: 50px;
            }
        </style>
